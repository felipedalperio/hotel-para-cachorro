@model Hotel.Models.Pet

@{
    ViewData["Title"] = "Cadastrar Pessoa Física";
}
<body style="background-image:url('https://media.istockphoto.com/vectors/abstract-polygonal-background-with-connected-lines-and-dots-pattern-vector-id1003422240')">
    <style>
        .form-control {
            border-radius: 4px;
            height: 40px;
            border: 1px solid #000000;
        }
    </style>
    <center><h2>@ViewData["Title"]</h2></center>

    <hr />
    <div class="row" style="padding:40px; border-radius:10px; box-shadow:10px 10px 8px 10px #888888;background-color:white">

        <form asp-action="CreatePet">

            <div class="col-md-12">
                <hr />
                <center><h3>Informações do Pet</h3></center>
                <hr />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Nome do Pet" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Raca" class="control-label"></label>
                    <input asp-for="Raca" class="form-control" placeholder="Raça" />
                    <span asp-validation-for="Raca" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tipo" class="control-label"></label>
                    <input asp-for="Tipo" class="form-control" placeholder="Gato | Cachorro" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tamanho" class="control-label"></label>
                    <input asp-for="Tamanho" class="form-control" placeholder="Pequeno | Medio | Grande" />
                    <span asp-validation-for="Tamanho" class="text-danger"></span>
                </div>

            </div>
            <div class="col-md-12">
                <div class="form-group" style="margin-top:30px">
                    <input type="submit" value="Cadastrar" class="btn btn-block btn-lg btn-primary" />
                </div>
            </div>
        </form>
    </div>
    </div>

    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@{
    ViewData["Title"] = "Meus Pets";
}

<h2>@ViewData["Title"]</h2>

<style>
   

    th, td {
        padding: 5px;
        text-align: center;
    }
</style>
<table class="table">


    <table style="width:100%">
        
        <tr>
            <th>Nome</th>
            <th>Tamanho</th>
            <th>Tipo</th>
            <th>Raça</th>
            <th>Deletar</th>
        </tr>
        @foreach (var p in ViewBag.Pet)
        {
            if (ViewBag.usuarioLogadoId == p.PessoaFisicaId)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Tamanho</td>
                    <td>@p.Tipo</td>
                    <td>@p.Raca</td>

                    <td>
                        <form asp-area="" asp-controller="PessoaFisicas" asp-action="Delete" asp-route-id="@p.Id" method="post">
                            <input type="submit" class="btn btn-block btn-danger" value="Delete" />
                        </form>
                    </td>
                </tr>
            }
        }

    </table>
</table>


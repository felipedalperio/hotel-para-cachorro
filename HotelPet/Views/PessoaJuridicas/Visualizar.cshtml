
@model HotelPet.Models.Simulacao
@{
    ViewData["Title"] = "Visualizar";

}

<h2>Visualizar</h2>

<h4>  @ViewData["BemVindo"] </h4>

<div class="row" style="margin-top:20px">

    <div class="col-md-6" style=" margin-bottom: 10px; margin-bottom:10px">
        <div style=" margin-bottom: 10px">
            <img class="img-responsive img-rounded" src="@ViewBag.Hotel.Imagem" style=" width:100%;" />
        </div>
    </div>
    <div class="col-md-6" style=" margin-bottom: 10px; margin-bottom:10px">

        <h2>Nome do Hotel:@ViewBag.Hotel.Nome </h2>
        <h3>Preco: <h style="color:green;">R$ @ViewBag.Hotel.Preco</h3>
        <p>Descrição: @ViewBag.Hotel.Descricao</p>
        <p>Dono:@ViewBag.Hotel.PessoaJuridica.Nome </p>
        <p>Endereco:@ViewBag.Hotel.Endereco.Rua </p>

    </div>
    <div class="col-md-12" style=" margin-bottom: 10px; margin-bottom:10px">
      
        <form asp-action="Simulacao" asp-route-id="@ViewBag.Hotel.Id">
            @if (ViewBag.usuarioLogadoCpf != null)
            {
                <div class="form-group">
                    <label asp-for="QntsDias" class="control-label"></label>
                    <input asp-for="QntsDias" class="form-control" />
                    <span asp-validation-for="QntsDias" class="text-danger"></span>
                </div>
               
                <div class="form-group" style="margin-top:10px">
                      <input type="submit" value="Simulação" class="btn btn-block btn-lg btn-primary" />
                 </div>
           

            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <h3>Para fazer a simulação, A pessoa fisica devera estar logada. </h3>
                </div>
            }

        </form>

        </div>
</div>




